---
// Header component for 1Panel website
---

<header class="fixed top-0 left-0 right-0 z-50 bg-dark-200/80 backdrop-blur-md border-b border-gray-200">
  <nav class="container-custom">
    <div class="flex items-center justify-between h-16 lg:h-20">
      <!-- Logo -->
      <div class="flex items-center space-x-3">
        <img src="/images/logo-blue.png" alt="1Panel Logo" class="h-12">
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden lg:flex items-center space-x-8">
        <a href="https://vsbt.1panel.cn/" class="text-gray-700 hover:text-gray-900 hover:font-bold transition-colors duration-300">产品优势</a>
        <a href="#" class="relative text-gray-700 hover:text-gray-900 hover:font-bold transition-colors duration-300 group">
          专业版
          <span class="relative -left-1 bottom-2">
            🔥
          </span>
        </a>
        <a href="#" class="text-gray-700 hover:text-gray-900 hover:font-bold transition-colors duration-300">应用商店</a>
        <a href="#" class="text-gray-700 hover:text-gray-900 hover:font-bold transition-colors duration-300">论坛求助</a>
        <a href="#" class="text-gray-700 hover:text-gray-900 hover:font-bold transition-colors duration-300">使用手册</a>
        <div class="flex items-center space-x-4">
          <a href="https://demo.1panel.cn/" target="_blank" class="btn-secondary text-sm">
            在线体验
          </a>
          <a href="https://github.com/1Panel-dev/1Panel" target="_blank" class="btn-primary text-sm">
            代码仓库
          </a>
        </div>
      </div>

      <!-- Mobile menu button -->
      <button id="mobile-menu-btn" class="lg:hidden p-2 text-gray-700 hover:text-gray-900">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="lg:hidden hidden pb-4">
      <div class="flex flex-col space-y-4">
        <a href="#home" class="text-gray-700 hover:text-gray-900 transition-colors duration-300 py-2">首页</a>
        <a href="#features" class="text-gray-700 hover:text-gray-900 transition-colors duration-300 py-2">功能特性</a>
        <a href="#quickstart" class="text-gray-700 hover:text-gray-900 transition-colors duration-300 py-2">快速开始</a>
        <a href="#about" class="text-gray-700 hover:text-gray-900 transition-colors duration-300 py-2">关于我们</a>
        <div class="flex flex-col space-y-3 pt-4">
          <a href="https://demo.1panel.cn/" target="_blank" class="btn-secondary text-sm text-center">
            在线体验
          </a>
          <a href="https://github.com/1Panel-dev/1Panel" target="_blank" class="btn-primary text-sm text-center">
            代码仓库
          </a>
        </div>
      </div>
    </div>
  </nav>
</header>

<script>
  // Mobile menu toggle
  document.addEventListener('DOMContentLoaded', () => {
    const mobileMenuBtn = document.getElementById('mobile-menu-btn');
    const mobileMenu = document.getElementById('mobile-menu');

    if (mobileMenuBtn && mobileMenu) {
      mobileMenuBtn.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
      });

      // Close mobile menu when clicking on a link
      const mobileLinks = mobileMenu.querySelectorAll('a');
      mobileLinks.forEach(link => {
        link.addEventListener('click', () => {
          mobileMenu.classList.add('hidden');
        });
      });
    }
  });
</script>
